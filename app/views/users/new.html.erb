<h1>新規登録</h1>

<%= form_with model:@user, url: users_create_path, local: true do |f| %>
    <div class="form_group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name %>
    </div>
    <div class="form_group">
        <%= f.label :mail,"メールアドレス" %>
        <%= f.text_field :mail, readonly: true, value: "#{@tentative_user.mail}"%>
    </div>
    <div class="form_group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password  %>
    </div>
    <div class="form_group">
        <%= f.label :password_confirmation, "パスワード（確認用）" %>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="form_group">
        <%= f.submit "新規登録" %>
    </div>
<%end%>