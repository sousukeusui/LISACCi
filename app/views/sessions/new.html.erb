<p>ログイン</p>
<%= form_with url: login_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :mail, "メールアドレス" %>
    <%= f.text_field :mail %>
  <div class="form-group">
    <%= f.label :password, "パズワード" %>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.submit "ログイン" %>
  </div>
<% end %>